@model WebsiteTuyenSinh.Models.LienHeViewModel

@{
    ViewBag.Title = "LienHe";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<link href="~/assets/client/css/default.css" rel="stylesheet" />
<div class="block-nopadding no-padding-home">
    <div class="content noidung" style="background-color:white;">
        <div class="row ">
            <div class="col-sm-12">
                <p class="titlepax text-center mt-10">THÔNG TIN LIÊN HỆ</p>
            </div>
        </div>
        <div class="container blockContent">
            <div class="row">
                <div class="col-xs12 col-md-6">
                    <div class="col-xs-12 col-md-12 mb-10">
                        <div class="input-group">
                            <label>Họ và tên <span class="BatBuoc">(*)</span></label>
                            <input class="form-control text-center" id="HoTen" type="text" placeholder="Nhập họ và tên">
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-12 mb-10">
                        <div class="input-group mb-10">
                            <label>Ngày sinh</label>
                            <input class="form-control text-center" id="NamSinh" type="date" placeholder="ngày/tháng/năm">
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-12 mb-10">
                        <div class="input-group validate-inputgroup mb-10">
                            <label>Điện thoại <span class="BatBuoc">(*)</span></label>
                            <input class="form-control text-center" id="SoDienThoai" type="number" placeholder="Nhập số điện thoại">
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-12 mb-10">
                        <div class="input-group mb-10">
                            <label>Email</label>
                            <input class="form-control text-center" id="Email" type="email" placeholder="Nhập email">
                        </div>
                    </div>
                    <div class="col-xs-12 col-md-12 mb-10">
                        <div class="input-group validate-inputgroup mb-10">
                            <label>Nội dung liên hệ <span class="BatBuoc">(*)</span></label>
                            <textarea style="width:100%;border: 2px solid #f1f1f1" id="NoiDung" rows="6"></textarea>
                        </div>
                    </div>
                    <div class="block">
                        <div class="center-block mb-10">
                            <div class="row mt-15">
                                <div class="center-block">
                                    <b class="text-danger"><i>Bắt buộc điền đầy đủ những mục có dấu (<span class="text-danger">*</span>)</i></b>
                                </div>
                            </div>
                            <div class="text-center mt-10">
                                <button type="button" class="btn btn-success btnGuiLienHe">Gửi liên hệ</button>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xs-12 col-md-6">
                    <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3258.7779591012404!2d109.21616410009057!3d13.75703392494793!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x316f6ce9487418e9%3A0x19c18a8557269787!2sQuy+Nhon+College+of
                                    +Engineering+and+Technology!5e0!3m2!1sen!2sus!4v1532420408534" class="bando" frameborder="0" style="border:0" allowfullscreen=""></iframe>
                </div>
            </div>
            <br>
        </div>
    </div>
</div>

@section scripts{
    <script src="~/assets/client/jsdb/GuiLienHejs.js"></script>
}